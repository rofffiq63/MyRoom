<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowTranslucentStatus" tools:targetApi="kitkat">true</item>

    </style>

    <style name="AppTheme.me" parent="AppTheme">
        <item name="windowNoTitle">true</item>
        <item name="android:windowAnimationStyle">@style/noAnimTheme</item>
    </style>

    <style name="ToolbarThemeWhite" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <item name="colorControlNormal">@color/colorPrimary</item>
        <item name="android:textColorPrimary">@color/colorDark</item>
    </style>

    <style name="noAnimTheme" parent="Animation.AppCompat.Dialog">
        <item name="android:windowExitAnimation">@anim/out_slide_right</item>
        <item name="android:windowEnterAnimation">@anim/in_left_slide</item>
        <item name="windowActionBar">true</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
    </style>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="collapsedappbar">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/collapsedText</item>
    </style>

    <style name="expandedappbar">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/expandedText</item>
    </style>

    <color name="collapsedText">@color/colorPrimary</color>
    <color name="expandedText">#003a3a3a</color>
</resources>
